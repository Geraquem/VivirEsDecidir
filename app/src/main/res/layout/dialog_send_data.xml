<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/send_dilemma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <TextView
            style="@style/MediumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="8dp"
            android:text="@string/send_data_dilemma_title"
            app:drawableStartCompat="@drawable/ic_dilemma" />

        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0.5"
            android:text="@string/send_data_dilemma_subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@drawable/bg_white_box"
            android:backgroundTint="@color/grey"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                style="@style/SmallTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/send_data_for_example"
                android:textStyle="bold" />

            <TextView
                style="@style/SmallTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_data_dilemma_example" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/ll_action_buttons" />

    <LinearLayout
        android:id="@+id/send_dualism"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp">

        <TextView
            style="@style/MediumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="8dp"
            android:text="@string/send_data_dualism_title"
            app:drawableStartCompat="@drawable/ic_dilemma_yes_trans" />

        <TextView
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:alpha="0.5"
            android:text="@string/send_data_dualism_subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@drawable/bg_white_box"
            android:backgroundTint="@color/grey"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                style="@style/SmallTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/send_data_for_example"
                android:textStyle="bold" />

            <TextView
                style="@style/SmallTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_data_dualism_example" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>