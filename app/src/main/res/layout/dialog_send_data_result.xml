<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_error"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/content_description"
        tools:src="@drawable/ic_error" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/MediumTextView_Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textAllCaps="true"
        tools:text="@string/error_title" />

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/SmallTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:textAllCaps="true"
        tools:text="@string/error_description" />

    <TextView
        android:id="@+id/btn_resend"
        style="@style/MediumTextView_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_send_data_button"
        android:elevation="6dp"
        android:gravity="center"
        android:padding="12dp"
        android:textAllCaps="true"
        tools:text="@string/error_btn" />

    <TextView
        android:id="@+id/btn_exit"
        style="@style/MediumTextView_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_error_btn"
        android:elevation="6dp"
        android:gravity="center"
        android:padding="12dp"
        android:textAllCaps="true"
        tools:text="@string/error_btn" />

</LinearLayout>