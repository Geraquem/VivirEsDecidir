<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SmallTextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallTextView_Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextView_Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BigTextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BigTextView_Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonsTextView">
        <item name="android:fontFamily">@font/btn_font</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="scroll_no_effects">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="circular_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="edit_text">
        <item name="android:maxLength">350</item>
        <item name="android:autofillHints">null</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:inputType">text|textMultiLine|textCapSentences</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="android:textColorHint">@color/et_hint</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_send_comment</item>
    </style>

    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

<!--    android:imeOptions="actionDone"-->

</resources>